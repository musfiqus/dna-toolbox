<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.mushfiqussalehin.bioinformaticsassignment.CalculationActivity">

    <include
        android:id="@+id/appbar_layout_calculation"
        layout="@layout/appbar_layout" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/string_input_layout"
        android:layout_below="@id/appbar_layout_calculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/string_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="atgcATGC"
            android:inputType="textMultiLine" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/calculate_button"
        android:layout_below="@id/string_input_layout"
        style="@style/ButtonStyle"
        tools:text="BUTTON"/>

    <TextView
        android:id="@+id/result_header"
        android:layout_below="@id/calculate_button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/result"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@id/result_header"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
